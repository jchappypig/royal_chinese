- content_for :title, 'Our Location'

.page-header
  %h1 Our Location
.row
  .span8
    = gmaps(:markers => {:data => @json}, :map_options => { :auto_adjust => true, auto_zoom: false, :zoom => 16 },
          :last_map => true)
  .span4
    %h3.title You can contact us on
    .mt20
    %p
      %i.icon-circle-arrow-right.icon-white
      Phone: #{company_phone}
    %p
      %i.icon-circle-arrow-right.icon-white
      Email: #{company_contact_email}
    %p
      %i.icon-circle-arrow-right.icon-white
      Address: #{company_address}
