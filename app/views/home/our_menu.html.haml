.page-header
  %h1 Our menu

.tabbable.tabs-left
  %ul.nav.nav-tabs
    %li
      %a{"data-toggle" => "tab", href: "#lA"} Hotpot
    %li.active
      %a{"data-toggle" => "tab", href: "#lB"} BBQ
  .tab-content
    #lA.tab-pane.active
      %ul.thumbnails
        = render partial: 'home/menu', collection: Menu.find_all_by_dish_type('Hotpot')
    #lB.tab-pane
      %ul.thumbnails
        = render partial: 'home/menu', collection: Menu.find_all_by_dish_type('BBQ')

