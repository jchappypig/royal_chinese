= link_to 'Download PDF Menu','/assets/royal_chinese_menu.pdf', class: 'download_menu_btn btn', method: :get, target: :blank

.page-header
  %h1.title Our menu

.tabbable.tabs-left
  %ul.nav.nav-tabs
    %li.active
      %a{"data-toggle" => "tab", href: "#hotpot"} Hotpot
    %li
      %a{"data-toggle" => "tab", href: "#bbq"} BBQ
  .tab-content
    #hotpot.tab-pane.active
      %ul.thumbnails
        = render partial: 'home/menu', collection: Menu.find_all_by_dish_type('Hotpot')
    #bbq.tab-pane
      %ul.thumbnails
        = render partial: 'home/menu', collection: Menu.find_all_by_dish_type('BBQ')

