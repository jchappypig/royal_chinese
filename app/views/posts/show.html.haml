%p
  %b Title:
  = @post.title
%p
  %b Content:
  = simple_format(@post.content)
%p
  %b Is valid:
  = @post.is_valid

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path

%p
  = simple_form_for @post, url: broadcast_post_path(@post) do  |f|
    .actions
      = f.button :submit, 'Broadcast', disable_with: 'Sending...'
