- content_for :title, 'Menu Details'

.page-header
  %h1 Menu Details
%p
  %strong.title Name:
  = @menu.name
%p
  = image_tag @menu.image.url(:large)
%p
  %strong.title Category:
  = @menu.category
%p
  %strong.title Price:
  = @menu.price
%p
  %strong.title Dish type:
  = @menu.dish_type
%p
  %strong.title Is vegetarian:
  = @menu.is_vegetarian

