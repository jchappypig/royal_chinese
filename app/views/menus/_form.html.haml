= simple_form_for(@menu, validate: true, html: {multipart: true}) do |f|
  .inputs
    = f.input :name
    = image_tag @menu.image.url(:thumbnail)
    = f.file_field :image
    = f.input :category
    = f.input :price
    = f.input :dish_type, :as => :select, :collection => Menu::DISH_TYPES.map { |dish_type| dish_type.to_s.capitalize}, value: Menu::DISH_TYPES.first.to_s.capitalize
    = f.input :is_vegetarian

  .actions
    = f.button :submit, disable_with: 'Saving...'
